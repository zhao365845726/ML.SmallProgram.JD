/* pages/shopping/shopping.wxss */
.shopping{
    background-color: #f7f7f7;
    height: 100%;
    width: 100%;
}

.flex_top{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding:0 40rpx;
    height: 100rpx;
    background-color: white;
    margin-bottom: 20rpx;
    border-radius: 0 0 20rpx 20rpx;
    font-size: 30rpx;
}

.shop_view{
    display: flex;
    flex-direction: column;
}

.store_box{
    display: flex;
    flex-direction: column;
    padding-left:20rpx
}

.store_name{
    padding: 20rpx;
}

.shop_box{
    padding-left:50rpx;
    display: flex;
    align-items: center;
}

.shop_box_flex{
    width: 100%;
    height: 100%;
    display: flex;
}

.shop_left{
    flex:1;
}

.shop_right{
    flex:2;
    padding-left: 20rpx;
    width: 100%;
}

.shop_number{
    display: flex;
    width: 100%;
    width: 300rpx;
    justify-content: space-between;
}

.number{
    width: 60rpx;
}

.shop_type{
    font-size: 25rpx;
    padding: 5rpx 0;
}
.right_number{
    display: flex;
}

.shop_img{
    height:100%;
    width: 200rpx;
}

.left_money{
    color: red;
    font-weight: bold;
}

.all_select{
    height: 100rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: white;
    padding-left: 20rpx;
    z-index: 20;
}

.bottom_flex{
    height: 100%;
    width: 650rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.bottom_left_text{
    padding-left: 20rpx;
    height: 100%;
    line-height: 100rpx;
}

.bottom_right{
   height: 100%;
   display: flex;
   line-height: 100rpx;
   align-items: center;
}

.paddinglr10{
    padding: 0 10rpx;
}