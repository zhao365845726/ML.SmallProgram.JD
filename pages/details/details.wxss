/* box独有属性 */
.details {
    background-color: #f2f2f2;
    width: 100%;
    position: relative;
}

.shop_img {
    display: flex;
    align-items: center;
    width: 100%;
}

.shop_tag {
    display: flex;
    align-items: center;
    height: 100rpx;
}

.left_icon {
    display: flex;
    align-items: center;
}

.quick_shop_icon {
    height: 60rpx;
    width: 60rpx;
}


.left_tag {
    display: flex;
    flex: 2;
    align-items: center;
    justify-content: flex-start;
    background-color: #6937cf;
    height: 100%;
}

.left_txt {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.right_tag {
    flex: 2;
    background-color: #e5bdfe;
    display: flex;
    height: 100%;
    align-content: center;
    justify-content: flex-end;
}

.flex_end {
    width: max-content;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #6937cf;
}

.top_txt {
    width: max-content;
}

.favorites_shop {
    width: 40rpx;
}

.shop_more {
    display: flex;
    flex-direction: column;
    width: 100%;
    background-color: white;
    border-radius: 0 0 30rpx 30rpx;
    margin-bottom: 20rpx;
}

.shop_title {
    justify-content: space-between;
}

.top {
    display: flex;
}

.more_img {
    flex: 1;
}

