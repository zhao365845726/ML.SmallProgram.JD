}

.table {
    display: table;
    width: 100%;
    border-collapse: collapse;
    box-sizing: border-box;
}

.tr {
    display: table-row;
    height: 100rpx;
}

.td {
    display: table-cell;
    height: 100rpx;
    text-align: center;
    vertical-align: middle;
    border: 1rpx solid gray;
}

.th {
    display: table-cell;
    font-weight: bold;
    height: 100rpx;
    text-align: center;
    border: 1rpx solid gray;
    vertical-align: middle;
}

.bottom_fixed {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    background-color: white;
    border-top: solid 3rpx #f2f2f2;
}

.to_shop_car {
    background-color: #ffbe0d;
    text-align: center;
    vertical-align: middle;
    height: 80rpx;
    border-radius: 40rpx;
    line-height: 80rpx;
}

.to_money {
    background-color: #f21c0c;
    text-align: center;
    vertical-align: middle;
    height: 80rpx;
    border-radius: 40rpx;
    line-height: 80rpx;
}

.bottom_img {
    width: 50rpx;
}