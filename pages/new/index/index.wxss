  height: 100%;
  width: 750rpx;
  justify-content: center;
  white-space: nowrap;
  overflow: hidden;
}

.tab_item {
  height: 45rpx;
}

.tab_is_select {
  height: 5rpx;
  background: linear-gradient(to right, white, red);
}

.right_view {
  width: 70rpx;
  height: 100%;
  justify-content: center;
  border-left: 3rpx solid #ca3c24;
  position: absolute;
  top: 0;
  right: 0;
  background-color: red;
  z-index: 20;
}

