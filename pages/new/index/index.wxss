.new_index {
  width: 100%;
  height: 100%;
  position: relative;
}

.top_fixed {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 2;
}

.top_search {
  height: 70rpx;
  width: 100%;
}

.left_search {
  border-radius: 35rpx;
