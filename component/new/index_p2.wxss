/* component/new/index_p2.wxss */
.index_p2{
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    background-color: #f3f3f3;
}

.top_block{
    height: 378rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    flex-wrap: wrap;
}

.shop_box_1{
    width: 20%;
    height: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 25rpx;
    box-sizing: border-box;
}

.shop_img_1{
    height: 90rpx;
    width: 90rpx;
}
.shop_txt{
    font-size: 25rpx;
    padding: 10rpx;
}

.shop_spike{
    height: 400rpx;
    box-sizing: border-box;
    padding: 20rpx;
    margin: 20rpx 0;
}

.top_title{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 20 0rpx;
    height: 40rpx;
}

.left_title{
    display: flex;
    align-items: center;
}

.title_icon{
    height: 35rpx;
    width: 35rpx;
}
.title_txt{
    padding-left: 10rpx;
    font-size: 30rpx;
}

.title_more{
    font-size: 30rpx;
}


.shop_details{
    display: flex;
    align-items: center;
    margin-top: 20rpx;
    overflow: hidden;
}

.shop_details_sv{
    width: 750rpx;
    white-space: nowrap;
}

.shop_box2{
    width: 200rpx;
    height: 300rpx;
    display: inline-block;
    padding-right: 20rpx;
}

.shop_img_box{
    height: 180rpx;
    width: 200rpx;
    position: relative;
}

.shop_img_2{
    height:100%;
    width: 100%;
}

.float_text{
    z-index: 5;
    position: absolute;
    background-color: #ca2a2a;
    border-radius: 10rpx 10rpx 0 10rpx ;
    top: 10rpx;
    left: 10rpx;
    height: 30rpx;
    padding: 5rpx;
    color:#ffd1aa;
    font-size: 30rpx;
    line-height: 30rpx;
}

.shop_price_1{
    display: flex;
    align-items: center;
    width: 100%;
}

.shop_discount{
    font-weight: bold;
    color: #c13500;
    font-size: 30rpx;
    line-height: 30rpx;
}

.shop_old_price{
    color: #bcbcbc;
    font-size: 30rpx;
    line-height: 30rpx;
    text-decoration: line-through;
}

.shop_progress_view{
    border-radius: 5rpx;
    padding: 10rpx 0;
}

.shop_progress_text{
    width: 100%;
    text-align: center;
}

.view_featured{
    margin-top: 10rpx;
    height: 50rpx;
    width: 100%;
    display: flex;
    align-items: center;
    flex-direction: column;
}

.featured_box{
    display: flex;
    align-items: center;
}

.line{
    background-color: #e2e2e2;
    height: 3rpx;
    width: 50rpx;
    margin: 0 30rpx;
}

.featured_icon{
    margin:0 15rpx;
    height: 30rpx;
    width: 30rpx;
}

.featured_icon_img{
    width: 100%;
    height: 100%;
}

.featured_text{
    font-weight: bold;
    height: 30rpx;
    line-height: 30rpx;
    margin: 0 20rpx;
}

.pb_box{
    background-color: white;
    border-radius: 20rpx;
}

.featured_shop{
    display: flex;
    align-items: center;
    width: 100%;
    margin: 0 20rpx;
    box-sizing: border-box;
    flex-wrap: wrap;
}

.featured_shop_box{
    width: 45%;
    box-sizing: border-box;
    margin:20rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.featured_shop_box:nth-child(n+1){
    margin-right: 20rpx;
}

.shop_img_box_2{
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 280rpx;
    width: 250rpx;
}

.bottom_txt{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    box-sizing: border-box;
    padding-left:20rpx;
}

.shop_title{
    word-wrap: wrap;
    line-height: 40rpx;
    font-size: 30rpx;
    box-sizing: border-box;
    padding-bottom: 20rpx;
}

.shop_price_2{
    color: #ff2A29;
    font-weight: bold;
    font-size: 30rpx;
    line-height: 30rpx;
    box-sizing: border-box;
    padding-bottom: 20rpx;
}