/* component/spike/spike.wxss */
.spike{
    height: 800rpx;
    width: 700rpx;
    border-radius: 30rpx;
    background-color: white;
    box-sizing: content-box;
    margin: 20rpx 25rpx;
}

.spike_top{
    height: 100rpx;
    display: flex;
    align-items: center;
    position: relative;
}

.spike_top_title{
    font-size: 40rpx;
    margin: 0 10rpx;
}

.spike_top_show{
    display: flex;
    border: 5rpx red solid;
    border-radius: 100rpx;
}
.spike_time{
    background-color: red;
    color: white;
    font-size: 25rpx;
    border-radius: 100rpx;
    border-radius: 50rpx 0 0 50rpx ;
    padding: 0 10rpx;
}
.spike_retime{
    color: red;
    font-size: 25rpx;
    margin: 0 10rpx;
}
.spike_more{
    line-height: 100rpx;
    text-align: center;
    display: flex;
    height: 100%;
    position: absolute;
    top:0;
    right: 20rpx;
}

.more_hide{
    height: 100%;
    font-size: 25rpx;
}

.more_to{
    margin-left: 5rpx;
}

.spike_commodity_list{
    height: max-content;
    width: 100%;
    overflow:hidden;
    white-space:nowrap;
    border: 5rpx solid #afafaf;
}

