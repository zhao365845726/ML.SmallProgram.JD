/* component/ search/ search.wxss */
.comSearch{
    width: 100%;
    height: 80rpx;
    background-color: red;
    box-sizing: border-box;
    display: flex;
    padding: 10rpx 0;
}
.left{
    width: 90%;
    height: 60rpx;
    margin-left: 20rpx;
    background-color: rosybrown;
    /* display: flex; */
    position: relative;
    border-radius: 50rpx;
    background-color: white;
}
.search_icon{
    position: absolute;
    height: 40rpx;
    padding-top: 10rpx;
    width: 100rpx;
    top: 0;
    left: 50rpx;
}

.search_txt{
    position: absolute;
    left: 150rpx;
    line-height: 60rpx;
    top: 0;
}
.search_cam{
    padding-top: 10rpx;
    position: absolute;
    height: 40rpx;
    width: 100rpx;
    right: 50rpx;
    top: 0;
}

.right{
    width: 10%;
    height: 60rpx;
    display: flex;
    align-items: center;
}

.activity{
    height: 40rpx;
    width: 100%;
    padding-top: 10rpx;
    padding-left: 10rpx;
}