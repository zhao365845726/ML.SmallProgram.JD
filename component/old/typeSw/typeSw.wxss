.sw{
    height: 100%;
    width: 100%;
}
.pg_sw{
    display: flex;
    flex-direction: row;
    align-items: center;
    min-width: max-content;
    min-height: max-content;
    display: inline-block;
}
.pg_sw_item{
    max-width: 130rpx;
    min-width: max-content;
    min-height: max-content;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 10rpx;
}
.item_img{
    width: 50rpx;
    max-width: 120rpx;
    margin: 10rpx 10rpx;
}

.item_text{
    min-width: max-content;
    max-width: 120rpx;
    height: 20rpx;
    margin: 10rpx 10rpx;
    line-height: 20rpx;
    text-align: center;
}